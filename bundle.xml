        <license>MIT</license>
        <website>http://www.adaptframework.com/documentaion/extentions/currency_gbp</website>
        <depends_on>
            <bundle>
                <name>adapt</name>
                <version>2.0</version>
            </bundle>
            <bundle>
                <name>currency</name>
                <version>1.0</version>
            </bundle>
        </depends_on>
        <settings>
            <category name="Default currency">
                <setting>
                    <name>Default currency</name>
                    <label>Default currency</label>
